<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/serviceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Window AC Repair"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/serviceNameTV">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. "
            android:textSize="15sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/black"
            android:typeface="sans"/>
        <TextView
            android:id="@+id/servicePriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="499"
            android:textSize="15sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/black"
            android:typeface="sans"/>

    </LinearLayout>

    <LinearLayout android:layout_width="80sp"
        android:layout_height="32sp"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/black_rounded_corner_rec">

        <Button
            android:id="@+id/removeBT"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/left_round_corner_rec"/>

        <TextView
            android:id="@+id/quantityTV"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="0"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/addBT"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/right_round_corner_rec"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7sp"
        android:background="@color/gray"
        android:layout_below="@+id/ll"
        android:layout_marginTop="15sp"/>

</RelativeLayout>