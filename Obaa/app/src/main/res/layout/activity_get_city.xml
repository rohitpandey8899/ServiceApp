<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GetCityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4sp">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/toolbarParentRL">

            <Button
                android:id="@+id/backBTGetCity"
                android:layout_width="26sp"
                android:layout_height="26sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5sp"
                android:background="@drawable/arrow_back_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:text="Select your city"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/backBTGetCity"
                android:typeface="serif"
                tools:ignore="RelativeOverlap" />

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4sp"
        android:layout_marginTop="4sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/pickLocationLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp">

            <ImageView
                android:layout_width="25sp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_location_black_24dp" />

            <TextView
                android:id="@+id/pickCityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_gravity="center"
                android:text="Pick my current Location"
                android:textSize="14sp"
                android:textColor="@color/black"/>


        </LinearLayout>

            <ProgressBar
                android:id="@+id/locationProgressBar"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:visibility="invisible"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are reaching out to new cities"
        android:gravity="center"
        android:paddingTop="5sp"
        android:paddingBottom="5sp" />

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/citiesRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"/>-->

    <ListView
        android:id="@+id/cityLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>