<RelativeLayout android:id="@+id/acRepairRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/title2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC Repair"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/subTitle2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2TV"
        android:layout_marginTop="5sp"
        android:text="(Less Cooling, no cooling, Water Leakage etc.)"
        android:textColor="@color/Brown"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15sp"
        android:src="@drawable/right_arraw" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7sp"
        android:layout_below="@+id/subTitle2TV"
        android:layout_marginTop="15sp"
        android:background="@color/gray" />

</RelativeLayout>